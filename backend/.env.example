# Backend Environment Variables
PORT=5000
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/project-management-tool
JWT_ACCESS_SECRET=your_jwt_secret_here
FRONTEND_URL=http://localhost:3000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Nodemailer)
# Option 1: Using a Service (e.g., Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Option 2: Using Manual SMTP (Recommended for production hosts like Render)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USER=your_smtp_user
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=false

EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Project Management Tool"
